{
    "compilerOptions": {
        "outDir": "./lib/",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": false,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": ["node", "jest"],
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude":[
        "bin",
        "data",
        "dist",
        "docs",
        "lib",
        "node_modules",
        "test",
        "test-js"
    ]
}